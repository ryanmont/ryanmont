

<table border= "1">

    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Price</th>
      <th>Sale price</th>
      <th>Image</th>
      <th>Description</th>
      <th>Discount</th>
      <th>Other</th>
    </tr>


    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %></td>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%= product.sale_price %></td>
        <td><%= product.image %></td>
        <td><%= product.description %></td>
        <td><%= product.discount %></td>
        <td><%= product.other %></td>
      </tr>
    <% end %>

</table>